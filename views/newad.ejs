<header>
  <%- include("partials/_nav") %>
</header>
<body>
  <h2 id="message-title">Create New Ad</h2>
  <div class="message-container">
    <div class="message-forms">
    <form id="message-form">
      <div class="forms">
      <label class="title">Title&emsp;&emsp;&emsp;&ensp;</label>
      <input class="form-area" type="text" id="fname" name="fname">
      </div>
      <div class="forms">
      <label class="price">Price&emsp;&emsp;&emsp;</label>
      <input class="price-form" type="text" id="fname" name="fname">
      </div>
      <div class="forms">
        <label class="condition">Condition&emsp;</label>
        <select class="condition-form" name="condition">
          <option value="New">New</option>
          <option value="Like New">Like New</option>
          <option value="Good">Good</option>
          <option value="Fair">Fair</option>
          <option value="Salvage">Salvage</option>
        </select>
        </div>
        <div class="forms">
          <label class="image">Images&emsp;&emsp;</label>
          <input class="image-form" type="file" id="myFile" name="filename">
          </div>
      <div class="forms">
      <label class="body">Description</label>
      <textarea class="body-form" type="text" id="fname" name="fname"></textarea>
      </div>
      <a class="button" name="send" value="Send" type="submit">&nbsp;Post</a>
    </form>
  </div>
  </div>
</body>
